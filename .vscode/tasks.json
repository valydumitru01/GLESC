{
    "version": "2.0.0",
    "command": "g++",
    "linux": {
        "tasks": [
            {
                "taskName": "Build",
                "suppressTaskName": true,
                "isBuildCommand": true,
                "args": [
                    "-g",
                    "-std=c++11",
                    "main.cpp",
                    "-o", "Builds/Linux_Build/engine",
                    "-l{workspaceFolder}/Dependencies/include/GL",
                    "-l{workspaceFolder}/Dependencies/include/GLEW",
                    "-l{workspaceFolder}/Dependencies/include/GLU",
                    "-lSDL2main",
                    "-lSDL2",
                    "-lSDL2_image",
                    "-lSDL2_ttf"
                ]
            }
        ]
    },
    "osx": {
        "tasks": [
            {
                "taskName": "Build",
                "suppressTaskName": true,
                "isBuildCommand": true,
                "args": [
                    "-g",
                    "-std=c++11",
                    "main.cpp",
                    "-o", "Builds/Mac_Build/engine",
                    "-lGL",
                    "-lGLEW",
                    "-lGLU",
                    "-lSDL2main",
                    "-lSDL2",
                    "-lSDL2_image",
                    "-lSDL2_ttf"
                ]
            }
        ]
    },
    "windows": {
        "tasks": [
            {
                "taskName": "Build",
                "suppressTaskName": true,
                "isBuildCommand": true,
                "args": [
                    "-g",
                    "-std=c++11",
                    "main.cpp",
                    "-o", "Builds/Win_Build/engine",
                    "-lmingw32",
                    "-lopengl32",
                    "-lglew32",
                    "-lglew32mx",
                    "-lglu32",
                    "-lSDL2main",
                    "-lSDL2",
                    "-lSDL2_image",
                    "-lSDL2_ttf"
                ]
            }
        ]
    },
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "main.cpp",
                "-o",
                "Builds/Win_Build/engine",
                "-lmingw32",
                "-lopengl32",
                "-lglew32",
                "-lglew32mx",
                "-lglu32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf"
            ],
            "problemMatcher": [],
            "group": {
                "_id": "build",
                "isDefault": false
            }
        }
    ]
}